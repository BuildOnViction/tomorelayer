{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@route/*": ["component/route/*"],
      "@shared": ["component/shared"],
      "@constant": ["service/constant"]
    }
  }
}
